<Page x:Class="LiaoTian_Cup.ShowRMDetail"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LiaoTian_Cup"
      mc:Ignorable="d" 
      Height="880" Width="1180"
      Title="聊天杯 - 随机官突模式已确认"
      Background="#ACFFFFFF">

    <Grid ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="160" />
            <RowDefinition Height="160" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <Label Content="选手名称：" HorizontalAlignment="Left" Margin="30,0,0,0" VerticalAlignment="Center" FontSize="20" FontWeight="Bold"/>
            <TextBox Text=""  x:Name="PlayerName" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Center" Height="27.4" Width="230" Margin="0,0,35,0" Focusable="False"/>
            <CheckBox x:Name="ChkDoubles" Content="双打模式" Width="120" Height="30" Margin="0,10,35,0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="20" IsEnabled="False"/>
        </StackPanel>

        <Grid
            Grid.Row="1">
            <StackPanel Orientation="Horizontal">
                <Label Content="突变名称：" HorizontalAlignment="Left" Margin="30,0,0,0" VerticalAlignment="Center" FontSize="20" FontWeight="Bold"/>
                <TextBox x:Name="MutationBox" TextWrapping="Wrap"  VerticalAlignment="Center" Width="367" FontSize="20" SelectionOpacity="-2" Focusable="False"/>
                <Label Content="地图名称：" HorizontalAlignment="Left" Margin="50,0,0,0" VerticalAlignment="Center" FontSize="20" FontWeight="Bold"/>
                <TextBox x:Name="MapBox" VerticalAlignment="Center" Width="217" FontSize="20" Focusable="False"/>
            </StackPanel>
        </Grid>

        <Grid
			Grid.Row="2">
            <StackPanel Orientation="Horizontal">
                <Label Content="基础因子：" HorizontalAlignment="Left" Margin="30,0,0,0" VerticalAlignment="Center" FontSize="20" FontWeight="Bold"/>
                <Image x:Name="Factor1" Height="60" Width="60" HorizontalAlignment="Left" Stretch="Fill"/>
                <Image x:Name="Factor2" Height="60" Width="60" HorizontalAlignment="Left" Margin="15,0,0,0" Stretch="Fill"/>
                <Image x:Name="Factor3" Height="60" Width="60" HorizontalAlignment="Left" Margin="15,0,0,0" Stretch="Fill"/>
                <Image x:Name="MapImg" Margin="115,0,0,0" Height="85" Width="285" RenderTransformOrigin="0.5,0.5" Stretch="UniformToFill"/>
            </StackPanel>
        </Grid>

        <Grid
			Grid.Row="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid
                Grid.Row="0">
                <StackPanel Orientation="Horizontal" Margin="0,18,0,0">
                    <Label Content="已选自选因子：" HorizontalAlignment="Left" Margin="30,0,0,0" VerticalAlignment="Center" FontSize="20" FontWeight="Bold"/>
                    <Image x:Name="HasSelectFactor1" Height="60" Width="60" Stretch="Fill"/>
                    <Image x:Name="HasSelectFactor2" Height="60" Width="60" HorizontalAlignment="Left" Margin="15,0,0,0" Stretch="Fill"/>
                    <Image x:Name="HasSelectFactor3" Height="60" Width="60" HorizontalAlignment="Left" Margin="15,0,0,0" Stretch="Fill"/>
                    <Image x:Name="HasSelectFactor4" Height="60" Width="60" HorizontalAlignment="Left" Margin="15,0,0,0" Stretch="Fill"/>
                    <Image x:Name="HasSelectFactor5" Height="60" Width="60" HorizontalAlignment="Left" Margin="15,0,0,0" Stretch="Fill"/>
                    <Image x:Name="HasSelectFactor6" Height="60" Width="60" HorizontalAlignment="Left" Margin="15,0,0,0" Stretch="Fill"/>
                    <Image x:Name="HasSelectFactor7" Height="60" Width="60" HorizontalAlignment="Left" Margin="15,0,0,0" Stretch="Fill"/>
                    <Image x:Name="HasSelectFactor8" Height="60" Width="60" HorizontalAlignment="Left" Margin="15,0,0,0" Stretch="Fill"/>
                </StackPanel>
            </Grid>
            <Grid
                Grid.Row="1">
                <StackPanel Orientation="Horizontal" Margin="0,18,0,0">
                    <Label Content="已选择指挥官：" HorizontalAlignment="Left" Margin="30,0,0,0" VerticalAlignment="Center" FontSize="20" FontWeight="Bold"/>
                    <Image x:Name="HasSelectCommander1" Height="60" Width="60" HorizontalAlignment="Left" Margin="0,0,0,0" Stretch="Fill"/>
                    <Image x:Name="HasSelectCommander2" Height="60" Width="60" HorizontalAlignment="Left" Margin="15,0,0,0" Stretch="Fill"/>
                </StackPanel>
            </Grid>
            <Grid
                Grid.Row="2">
                <Label Content="随机AI为：" Margin="30,0,0,30" HorizontalAlignment="Left" VerticalAlignment="bottom" FontSize="20" FontWeight="Bold"/>
                <TextBox x:Name="AIBox" Text="暂无随机AI" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="bottom" Height="auto" Width="200" Margin="132,0,0,32" FontWeight="Bold" Focusable="False"/>
                <Button Content="返回" Width="120" Height="30" Margin="0,0,75,30" VerticalAlignment="Bottom" HorizontalAlignment="Right" Click="Button_Back_Click"/>
            </Grid>
        </Grid>
    </Grid>
</Page>
