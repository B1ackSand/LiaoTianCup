<Window x:Class="LiaoTian_Cup.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LiaoTian_Cup.Dictionary.I18n"
        mc:Ignorable="d"
        Title="{Binding [MainWindowTitle], Source={x:Static local:LanguageManager.Instance}}"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen"
        Icon="/LiaoTian_Cup;component/Resources/Logo/icon.ico"
        >
    <Window.Background>
        <ImageBrush ImageSource="/LiaoTian_Cup;component/Resources/R-C-16-9.jpg" Opacity="0.9" Stretch="UniformToFill"/>
    </Window.Background>

    <Viewbox>
        <Frame x:Name="load_frame" NavigationUIVisibility="Hidden" Source="MainPage.xaml" Height="880" Width="1180"/>
    </Viewbox>
</Window>
